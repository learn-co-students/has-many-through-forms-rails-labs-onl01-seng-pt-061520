<%= form_for @post do |f| %>
  <%= f.label :title, "Title:" %>
  <%= f.text_field :title %>
  <br>
  <%= f.label :content, "Content:" %>
  <%= f.text_field :content %>
  <br>

  <%= f.collection_check_boxes :category_ids, Category.all, :id, :name, include_blank: true %>
  <%= f.fields_for :categories, post.categories.build do |categories_fields| %>
    <%= categories_fields.text_field :name %>
  <% end %>

  <%= f.submit %>
<% end %>
