<h1><%= @post.title %></h1>
<h2>Categories</h2>
<% @post.categories.each do |category| %>
  <li>
    <%= category.name %>,
  </li>
<% end %>

<p><%= @post.content %></p>

<h3>Comments</h3>
<% @post.comments.each do |comment| %>
  <p>
    <%= comment.user.username %> says:
    <%= comment.content %>
  </p>
<% end %>

<h3>Users</h3>
<% @post.users.each.uniq do |user| %>
  <li><%= user.username %></li>
<% end %>

<%= form_for :comment do |f| %>
  <%= f.text_area :content %>
  <%= f.collection_select(:user_id, User.all, :id, :username, {include_blank: 'Select a user'} ) %>

  <%= f.fields_for :comments, User.new.comments.build do |comment_fields| %>
    <%= f.hidden_field :post_id, value: @post.id %>
    <%= comment_fields.text_area :content %>
  <% end %>
  <%= f.button("Create Comment") %>
<% end %>
