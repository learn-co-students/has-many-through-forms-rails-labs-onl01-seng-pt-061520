<%= @post.title %>
<%= @post.content %>
<% @post.categories.each do |category| %>
    <%= category.name %>
<% end %>
<% a = [] %>
<% @post.comments.each do |comment| %>
    <%= comment.content %>
    <% if !a.include?(comment.user) %>
        <% a << comment.user %>
    <% end %>
<% end %>

<% a.each do |usr| %>
    <%= link_to usr.username, user_path(usr)  %>
<% end %>

<%= form_for @post do |f| %>
    <%= f.hidden_field :post_id, value: @post.id %>
    <%= f.label "User List" %>
    <%= f.collection_select(:users, User.all, :id, :username, :promt => "User") %>
    <%= f.label "Comment" %>
    <%= f.fields_for :comments, @post.comments.build do |comment| %>
        <%= comment.text_field :content %>
    <% end %>
    <%= f.submit %>
<% end %>